                    android:layout_centerVertical="true"
                    android:maxLength="3"
                    android:singleLine="true"
                    android:paddingLeft="2px"
                    android:gravity="center"
                    android:paddingRight="2px"
                    android:paddingTop="0px"
                    android:paddingBottom="0px"
                    android:text="北京"
                    android:textColor="@color/black"
                    android:textSize="24px"
                    android:visibility="visible" />

                <View
                    android:id="@+id/common_title_left_v_pull"
                    android:layout_width="21px"
                    android:layout_height="12px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16px"
                    android:visibility="gone"
                    android:layout_toRightOf="@id/common_title_txt_left"
                    android:background="@drawable/common_title_left_pull_selector" />

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/common_title_layout_center"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
